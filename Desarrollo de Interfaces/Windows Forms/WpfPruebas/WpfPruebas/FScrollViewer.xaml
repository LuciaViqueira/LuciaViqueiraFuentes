<Window x:Class="WpfPruebas.FScrollViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPruebas"
        mc:Ignorable="d"
        Title="FScrollViewer" Height="450" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                <TextBlock Text="Redimensiona y Prueba" TextWrapping="Wrap" Margin="0,0,0,20"/>
                <Rectangle Fill="Red" Width="500" Height="500"></Rectangle>
                <Button Content="Boton"/>

            </StackPanel>
            
        </ScrollViewer>
    </Grid>
</Window>
