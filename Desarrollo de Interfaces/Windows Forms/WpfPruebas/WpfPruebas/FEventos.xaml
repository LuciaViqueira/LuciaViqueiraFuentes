<Window x:Class="WpfPruebas.FEventos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPruebas"
        mc:Ignorable="d"
        Title="FEventos" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Escriba un nombre" FontSize="30"></Label>
            <TextBox Name="textBNombre" FontSize="30" Text="{Binding Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Name="btnSaludar" Height="100" Width="200" FontSize="30" Content="Saludar"
                    Click="evtSaludar" Margin="0,20,0,0"></Button>
        </StackPanel>
    </Grid>
</Window>
